# Configurações de Produção - Siqueira Campos Imóveis
NODE_ENV=production

# Banco de Dados Principal
DATABASE_URL=postgresql://app_user:__DB_PASSWORD__@postgres:5432/siqueicampos_db

# Redis para Cache e Sessões
REDIS_URL=redis://:__DB_PASSWORD__@redis:6379

# Segurança
JWT_SECRET=__JWT_SECRET__
WEBHOOK_SECRET=__WEBHOOK_SECRET__

# Servidor
ADMIN_PORT=3001
HOST=0.0.0.0

# SSL e Domínios
DOMAIN_PUBLIC=siqueicamposimoveis.com.br
DOMAIN_ADMIN=meuboot.site

# APIs Externas (configure conforme necessário)
GOOGLE_MAPS_API_KEY=
WHATSAPP_API_TOKEN=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=

# Uploads e Storage
UPLOAD_MAX_SIZE=10485760
MINIO_ENDPOINT=minio.meuboot.site
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=__ADMIN_PASSWORD__

# Monitoramento
SENTRY_DSN=
LOG_LEVEL=info

# Features
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_CHAT=true
ENABLE_TOURS=true
